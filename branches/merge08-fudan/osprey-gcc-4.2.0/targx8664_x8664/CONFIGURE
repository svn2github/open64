# Temple Place - Suite 330, Boston MA 02111-1307, USA.

find .. -name config.cache | xargs /bin/rm -f

# if the libspin.a does not exist, build it first
if [ ! -f ../../osprey/targx8664_x8664/libspin_4_2_0/libgspin42.a ] ; then
    make -C ../../osprey/targx8664_x8664/libspin_4_2_0
fi
# create symbol link to libgspin42.a
ln -s -f ../../osprey/targx8664_x8664/libspin_4_2_0/libgspin42.a libgspin42.a

# copy all header files in libspin to gcc
cp -f ../../libspin/*.h ../gcc/

# configure the osprey-gcc
CC='gcc -m64 -DTARG_X8664' ../configure --prefix=/usr --program-prefix=open64- --program-suffix=-4.2.0 --with-gnu-as --with-gnu-ld --enable-languages=c,c++,java -disable-bootstrap --disable-shared --disable-multilib --disable-libmudflap --disable-libssp --enable-threads=posix --disable-checking --enable-tls --with-system-zlib --enable-__cxa_atexit --host=x86_64-redhat-linux
