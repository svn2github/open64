% Caligraphic and Math font macros
%
\def\Cal#1{${\cal{#1}}$}
%
\def\BigO#1{{\Cal{O}}{$($}{#1}{$)$}}
%
\def\Bf#1{${\bf{#1}}$}
%
\def\rarrow{${\rightarrow}$}
\def\larrow{${\leftarrow}$}
%
\def\Ptr{${\bf{\Rightarrow}}$}
%
\def\AvailC#1{${\rm{Avail}}({\cal{C}} \mid {\bf{#1}})$}
%
\def\bullito{{$\scriptstyle{\bullet}$}}

%------------------------------------------------------------------------- 

% Column alignment macros

% Produce "flushleft" paragraph text in column of table ("tabular" env.).
% Column must be declared with "p"; i.e., \begin{tabular}{|l|l|p{3.0 in}|}
%
\def\FC#1{{ \vspace*{-\topsep} \vspace*{-1em} \protect\begin{flushleft} #1 \protect\end{flushleft} }}

