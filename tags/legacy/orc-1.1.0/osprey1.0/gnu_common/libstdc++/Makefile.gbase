	cstrio.o	\
	fcomplex.o	\
	fcomio.o	\
	dcomplex.o	\
	dcomio.o	\
	ldcomplex.o	\
	ldcomio.o	\

# The following four macros are used when compiling the special objs.

STR_DEFINES =	\
