	-DTRAITS\
	-DADDSS	\
	-DADDPS	\
	-DADDCS	\
	-DADDSP	\
	-DADDSC	\
	-DEQSS	\
	-DEQPS	\
	-DEQSP	\
	-DNESS	\
	-DNEPS	\
	-DNESP	\
	-DLTSS	\
	-DLTPS	\
	-DLTSP	\
	-DGTSS	\
	-DGTPS	\
	-DGTSP	\
	-DLESS	\
	-DLEPS	\
	-DLESP	\
	-DGESS	\
	-DGEPS	\
	-DGESP	\


STR_IO_DEFINES = -DEXTRACT -DINSERT -DGETLINE

COMPLEX_DEFINES =\
	-DMAIN	\
	-DADDCC	\
	-DADDCF	\
	-DADDFC	\
	-DSUBCC	\
	-DSUBCF	\
