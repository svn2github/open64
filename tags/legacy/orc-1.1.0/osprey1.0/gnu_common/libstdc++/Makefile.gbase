	-DNEFC	\
	-DABS	\
	-DARG	\
	-DPOLAR	\
	-DCONJ	\
	-DNORM	\
	-DCOS	\
	-DCOSH	\
	-DEXP	\
	-DLOG	\
	-DPOWCC	\
	-DPOWCF	\
	-DPOWCI	\
	-DPOWFC	\
	-DSIN	\
