# The directory where all CROSS compiler component build subdirectories
# are located
#

CROSS_BUILD_DIR = kpro64/targia32_ia64_nodebug
CROSS_BUILD_DIR_LD = kpro64/targcygnus_ia32_ia64


# All CROSS compiler components:
CROSS_COMPONENTS = \
		$(CROSS_BUILD_DIR)/driver/driver \
                $(CROSS_BUILD_DIR)/be/be \
                $(CROSS_BUILD_DIR)/be/be.so \
                $(CROSS_BUILD_DIR)/cg/cg.so \
                $(CROSS_BUILD_DIR)/wopt/wopt.so \
                $(CROSS_BUILD_DIR)/lno/lno.so \
                $(CROSS_BUILD_DIR)/lw_inline/inline \
                $(CROSS_BUILD_DIR)/ipa/ipa.so \
                $(CROSS_BUILD_DIR)/ipl/ipl.so \
                $(CROSS_BUILD_DIR)/ipl/ipl \
                $(CROSS_BUILD_DIR)/targ_info/itanium.so \
                $(CROSS_BUILD_DIR)/whirl2c/whirl2c.so \
                $(CROSS_BUILD_DIR)/whirl2c/whirl2c \
                $(CROSS_BUILD_DIR)/whirl2f/whirl2f.so \
                $(CROSS_BUILD_DIR)/whirl2f/whirl2f \
                $(CROSS_BUILD_DIR)/ir_tools/ir_b2a \
                $(CROSS_BUILD_DIR_LD)/ld/ld-new  \
                $(CROSS_BUILD_DIR)/gccfe/gfec \
                $(CROSS_BUILD_DIR)/orc_ict/orc_ict.so \
                $(CROSS_BUILD_DIR)/orc_intel/orc_intel.so \
                $(CROSS_BUILD_DIR)/g++fe/gfecc \
                #$(CROSS_BUILD_DIR)/crayf90/sgi/mfef90 \

PHONY_TARGET = $(shell for i in $(CROSS_COMPONENTS); do basename "$$i" ; done) 
.PHONY : $(PHONY_TARGET) install clean clobber

all: build

$(CROSS_BUILD_DIR)/driver/driver driver:
	cd $(CROSS_BUILD_DIR)/driver; gmake 

$(CROSS_BUILD_DIR)/gccfe/gfec gfec:
	cd $(CROSS_BUILD_DIR)/gccfe ; gmake 

$(CROSS_BUILD_DIR)/g++fe/gfecc gfecc:
	cd $(CROSS_BUILD_DIR)/g++fe ; gmake 

$(CROSS_BUILD_DIR)/be/be be:
	cd $(CROSS_BUILD_DIR)/be ; gmake 

$(CROSS_BUILD_DIR)/be/be.so be.so:
	cd $(CROSS_BUILD_DIR)/be ; gmake 

$(CROSS_BUILD_DIR)/cg/cg.so cg.so:
	cd $(CROSS_BUILD_DIR)/cg ; gmake 

$(CROSS_BUILD_DIR)/orc_ict/orc_ict.so orc_ict.so: 
	gmake -C $(CROSS_BUILD_DIR)/orc_ict 

$(CROSS_BUILD_DIR)/orc_intel/orc_intel.so orc_intel.so: 
	gmake -C $(CROSS_BUILD_DIR)/orc_intel 

$(CROSS_BUILD_DIR)/wopt/wopt.so wopt.so:
	cd $(CROSS_BUILD_DIR)/wopt ; gmake 

$(CROSS_BUILD_DIR)/lno/lno.so lno.so:
	cd $(CROSS_BUILD_DIR)/lno ; gmake 

$(CROSS_BUILD_DIR)/ipa/ipa.so ipa.so:
	cd $(CROSS_BUILD_DIR)/ipa ; gmake 

$(CROSS_BUILD_DIR)/ipl/ipl.so ipl.so:
	cd $(CROSS_BUILD_DIR)/ipl ; gmake 

$(CROSS_BUILD_DIR)/ipl/ipl ipl:
	cd $(CROSS_BUILD_DIR)/ipl ; gmake 

$(CROSS_BUILD_DIR)/lw_inline/inline inline:
	cd $(CROSS_BUILD_DIR)/lw_inline ; gmake 

$(CROSS_BUILD_DIR)/whirl2c/whirl2c.so whirl2c.so:
	cd $(CROSS_BUILD_DIR)/whirl2c ; gmake 

$(CROSS_BUILD_DIR)/whirl2c/whirl2c whirl2c:
	cd $(CROSS_BUILD_DIR)/whirl2c ; gmake 

$(CROSS_BUILD_DIR)/whirl2f/whirl2f.so whirl2f.so:
	cd $(CROSS_BUILD_DIR)/whirl2f ; gmake 

$(CROSS_BUILD_DIR)/whirl2f/whirl2f whirl2f:
	cd $(CROSS_BUILD_DIR)/whirl2f ; gmake 

$(CROSS_BUILD_DIR)/targ_info/itanium.so itanium.so:
	cd $(CROSS_BUILD_DIR)/targ_info ; gmake 

$(CROSS_BUILD_DIR)/ir_tools/ir_b2a ir_b2a:
	cd $(CROSS_BUILD_DIR)/ir_tools ; gmake 

$(CROSS_BUILD_DIR)/crayf90/sgi/mfef90 mfef90:
	cd $(CROSS_BUILD_DIR)/crayf90/sgi ; gmake 

# rules for ld-new
.PHONY: Force
$(CROSS_BUILD_DIR_LD)/ld/ld-new ld-new: $(CROSS_BUILD_DIR_LD)/Makefile Force
	gmake -C $(CROSS_BUILD_DIR_LD); 
        
$(CROSS_BUILD_DIR_LD)/Makefile:  
	cd $(CROSS_BUILD_DIR_LD); ./CONFIGURE;  


build: ${PHONY_TARGET} 

install: ;@./INSTALL.cross

clobber:
	cd $(CROSS_BUILD_DIR)/driver; gmake clobber 
	cd $(CROSS_BUILD_DIR)/gccfe ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/g++fe ; gmake  clobber
	cd $(CROSS_BUILD_DIR)/be ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/cg ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/wopt ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/lno ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/ipa ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/ipl ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/lw_inline ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/whirl2c ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/whirl2f ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/targ_info ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/ir_tools ; gmake clobber 
	cd $(CROSS_BUILD_DIR)/crayf90/sgi ; gmake clobber 
	cd $(CROSS_BUILD_DIR_LD) ; ./CLOBBER 
